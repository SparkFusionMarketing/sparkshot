{
  "name": "sparkshot",
  "version": "1.3.0",
  "author": "Garrett Hoffman, Chief Spark Officer at SparkFusion Marketing",
  "description": "SparkShot captures desktop and mobile full page screenshots from any URL.",
  "type": "module",
  "main": "main.mjs",
  "private": true,
  "scripts": {
    "install:deps": "npm i playwright && npx playwright install",
    "start": "electron .",
    "build": "electron-builder -w",
    "release:win": "electron-builder -w -p always",
    "postinstall": "npx playwright install"
  },
  "dependencies": {
    "playwright": "^1.46.0",
    "electron-updater": "^6.3.4"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "@electron/notarize": "^3.0.2"
  },
  "build": {
    "appId": "com.sparkfusion.sparkshot",
    "productName": "SparkShot",
    "files": [
      "**/*",
      "!screens/**",
      "!logs/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "SparkFusionMarketing",
        "repo": "sparkshot"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "sparkshot.ico"
    },
    "nsis": {
      "installerIcon": "sparkshot.ico",
      "uninstallerIcon": "sparkshot.ico",
      "installerHeaderIcon": "sparkshot.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "mac-icons/SparkShot.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    }
  }
}